<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:gwt="urn:import:com.google.gwt.user.client.ui">
	<ui:style ui:field="style" type="com.usp.tabcloud.client.TabsViewWidget.CssStyle">
		.important {
			font-weight: bold;
		}
		
		.allTabStyle {
			font-weight: bold;
			color: #0055ff;
			font-size: 1.3em;
			text-align: left;
			margin-right: 20px;
		}
		
		.tabStyle {
			font-weight: bold;
			color: green;
			font-size: 1.2em;
			text-align: left;
			display: block;
		}
	</ui:style>
	<gwt:HTMLPanel>
		<gwt:Anchor ui:field="openAllTabs" addStyleNames="{style.allTabStyle}">
			Open All Tabs
		</gwt:Anchor>
		<gwt:Anchor ui:field="deleteAllTabs" addStyleNames="{style.allTabStyle}">
			Delete this Record
		</gwt:Anchor>
		<gwt:FlowPanel ui:field="mainPanel" />
	</gwt:HTMLPanel>
</ui:UiBinder> 